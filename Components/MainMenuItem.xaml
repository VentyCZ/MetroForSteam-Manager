<Button x:Name="this" x:Class="MetroSkinToolkit.Components.MainMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetroSkinToolkit.Components"
             mc:Ignorable="d" 
             d:DesignHeight="74" d:DesignWidth="345" FontSize="18" TextBlock.TextAlignment="Center" Style="{StaticResource ButtonStyle}">
    <StackPanel Margin="5">
        <TextBlock Text="{Binding ElementName=this, Path=Headline, FallbackValue=Test}"/>
        <TextBlock TextWrapping="Wrap" FontSize="15" Foreground="White" Text="{Binding ElementName=this, Path=Description, FallbackValue=Desc}" FontStyle="Italic"/>
    </StackPanel>
</Button>
